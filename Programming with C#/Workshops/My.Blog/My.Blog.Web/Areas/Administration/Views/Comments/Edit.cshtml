@model My.Blog.Web.Models.Comments.PostCommentAnnotationViewModel

@{
    ViewBag.Title = Resources.GlobalResources.EditComment;
}

<h2>@Resources.GlobalResources.EditComment</h2>

@using (Html.BeginForm(Resources.GlobalResources.Edit, "Comments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.HiddenFor(m => m.PostId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-12">
            @Html.TextAreaFor(m => m.Content, 6, 10, new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsDeleted, new { @class = "col-md-2 control-label" })
        <div class="col-12">
            @Html.DropDownListFor(m => m.IsDeleted, new SelectList(new List<string>() { "true", "false" }),
                                                                                                      new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CreatedOn, new { @class = "col-md-2 control-label" })
        <div class="col-12">
            @Html.TextBoxFor(m => m.CreatedOn, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-12">
            <input type="submit" class="btn btn-default" value=@Resources.GlobalResources.Edit />
        </div>
    </div>
}


