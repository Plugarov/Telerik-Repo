@model My.Blog.Web.Models.Posts.PostAnnotationViewModel

@{
    ViewBag.Title = Resources.GlobalResources.EditPost;
}

<script src="@Url.Content("~/Scripts/tinymce/tinymce.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    tinyMCE.init({
        selector: "#PostContent",
    });
</script>

<h2>@Resources.GlobalResources.EditPost</h2>

@using (Html.BeginForm("Edit", "Posts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.HiddenFor(m => m.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-12">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-12">
            @Html.TextAreaFor(m => m.Content, 10, 10, new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CreatedOn, new { @class = "col-md-2 control-label" })
        <div class="col-12">
            @Html.TextBoxFor(m => m.CreatedOn, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsDeleted, new { @class = "col-md-2 control-label" })
        <div class="col-12">
            @Html.DropDownListFor(m => m.IsDeleted, new SelectList(new List<string>() { "true", "false" }))
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(m => m.DeletedOn)
    </div>
    <div class="form-group">
        @Html.HiddenFor(m => m.PostImageName)
    </div>
    <div class="form-group">
        <div class="col-12">
            <input type="submit" class="btn btn-default" value=@Resources.GlobalResources.Edit />
        </div>
    </div>
}


