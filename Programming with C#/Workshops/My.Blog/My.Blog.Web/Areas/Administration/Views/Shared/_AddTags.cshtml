@model My.Blog.Web.Models.Tags.TagsViewModel

@if (Model.Tags.Any())
{
    for (int i = 0; i < Model.Tags.Count; i++)
    {
        @Html.CheckBoxFor(m => m.Tags[i].IsDeleted, new { @class = "form-control" })
        @Html.LabelFor(m => m.Tags[i].IsDeleted, Model.Tags[i].Name)
        @Html.HiddenFor(m => m.Tags[i].Name)
        @Html.HiddenFor(m => m.Tags[i].Id)
    }
}