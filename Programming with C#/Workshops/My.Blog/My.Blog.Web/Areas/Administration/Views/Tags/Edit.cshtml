@using My.Blog.Web.Models.Tags
@model TagAnnotaionViewModel

@{
    ViewBag.Title = Resources.GlobalResources.EditTags;
}

<h2>@Resources.GlobalResources.EditTag</h2>

@using (Html.BeginForm("Edit", "Tags", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.HiddenFor(m => m.Id)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-12">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-12">
            <input type="submit" class="btn btn-default" value=@Resources.GlobalResources.Edit />
        </div>
    </div>
}
